{
  "name": "telegram-bot",
  "version": "1.0.0",
  "description": "Telegram Bot",
  "main": "dist/bot.js",
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@stylistic/eslint-plugin": "^4.2.0",
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^22.3.0",
    "eslint": "^9.9.0",
    "globals": "^16.0.0",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.1.0"
  },
  "dependencies": {
    "better-sqlite3": "^11.1.2",
    "dotenv": "^16.4.5",
    "inversify": "^7.5.1",
    "reflect-metadata": "^0.2.2",
    "telegraf": "^4.16.3",
    "zod": "^3.24.4"
  },
  "scripts": {
